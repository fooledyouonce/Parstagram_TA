<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.UploadActivity">

    <Button
        android:id="@+id/btnTakePfp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="135dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="135dp"
        android:text="@string/capture" />

    <Button
        android:id="@+id/btnSubmitPfp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivPfp"
        android:layout_alignStart="@+id/btnTakePfp"
        android:layout_alignEnd="@+id/btnTakePfp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        android:text="@string/submit" />

    <ImageView
        android:id="@+id/ivPfp"
        android:layout_width="228dp"
        android:layout_height="217dp"
        android:layout_below="@+id/btnTakePfp"
        android:layout_alignStart="@+id/btnTakePfp"
        android:layout_alignEnd="@+id/btnTakePfp"
        android:layout_marginStart="-50dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="-50dp"
        android:layout_marginBottom="50dp"
        tools:srcCompat="@tools:sample/avatars" />

</RelativeLayout>